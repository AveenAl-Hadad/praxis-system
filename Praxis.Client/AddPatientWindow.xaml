<Window x:Class="Praxis.Client.AddPatientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Neuer Patient" Height="420" Width="520"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="TextBox">
            <Style.Triggers>
                <Trigger Property="Validation.HasError" Value="True">
                    <Setter Property="ToolTip"
                        Value="{Binding RelativeSource={RelativeSource Self},
                                        Path=(Validation.Errors)[0].ErrorContent}" />
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="140"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Text="Vorname:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox x:Name="FirstNameBox" Grid.Row="0" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="1" Grid.Column="0" Text="Nachname*:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox x:Name="LastNameBox" Grid.Row="1" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="2" Grid.Column="0" Text="Geburtsdatum:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <DatePicker x:Name="DobPicker" Grid.Row="2" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="3" Grid.Column="0" Text="E-Mail:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox x:Name="EmailBox" Grid.Row="3" Grid.Column="1" Height="28" Margin="0,0,0,8"/>

            <TextBlock Grid.Row="4" Grid.Column="0" Text="Telefon:" VerticalAlignment="Center" Margin="0,0,10,8"/>
            <TextBox x:Name="PhoneBox" Grid.Row="4" Grid.Column="1" Height="28" Margin="0,0,0,8"/>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Content="Abbrechen" Width="110" Height="30" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Speichern" Width="110" Height="30" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
    